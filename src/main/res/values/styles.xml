<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="game_tile">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/tile</item>
        <item name="android:layout_height">@dimen/tile</item>
        <item name="android:src">@drawable/tile</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:onClick">onTile</item>
        <item name="android:contentDescription">Tiles</item>
    </style>

    <style name="buttons">
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

</resources>
